<!-- 主页用户管理显示 -->
<div v-show="showMember" style="margin-top: 10px;">
  <div class="row">
    <div class="col">
      <table style="width: 80%;">
        <tr>
          <th></th>
          <th>编号</th>
          <th>头像</th>
          <th>用户名</th>
          <th>昵称</th>
          <th>性别</th>
          <th>生日</th>
          <th>城市</th>
          <th>职业</th>
          <th>启用状态</th>
        </tr>
        <tr
          :class="[{stripe_antiquewhite:isOdd(index)}, {stripe_bisque: !isOdd(index)}]"
          style="margin-top: 5px;"
          v-for="(member, index) of members"
        >
          <td>
            <div>
              <input
                type="checkbox"
                class="form-check-input"
                v-model="checkedMembers"
                :value="member"
              />
            </div>
          </td>
          <!-- 用户编号 -->
          <td>
            <div class="no_margin_padding">
              <span style="margin-left: 2px;">{{ member.id }}</span>
            </div>
          </td>
          <!-- 头像 -->
          <td>
            <div class="no_margin_padding" v-if="member.hasOwnProperty('icon')">
              <img :src="member.icon" width="32px" height="32px" />
            </div>
          </td>
          <!-- 用户名 -->
          <td>
            <div class="no_margin_padding">
              <span style="margin-left: 2px;">{{ member.username }}</span>
            </div>
          </td>
          <!-- 昵称 -->
          <td>
            <div class="no_margin_padding">
              <span
                style="margin-left: 2px;"
                v-if="member.hasOwnProperty('nickname')"
                >{{ member.nickname }}</span
              >
            </div>
          </td>
          <!-- 性别 -->
          <td>
            <div class="no_margin_padding">
              <span v-if="member.gender === 1">男</span>
              <span v-else-if="member.gender === 2">女</span>
              <span v-else>未知</span>
            </div>
          </td>
          <!-- 生日 -->
          <td>
            <div class="no_margin_padding">
              <span v-if="member.hasOwnProperty('birthday')">{{member.birthday}}</span>
            </div>
          </td>
          <!-- 城市 -->
          <td>
            <div class="no_margin_padding">
              <span v-if="member.hasOwnProperty('city')">{{member.city}}</span>
            </div>
          </td>
          <!-- 职业 -->
          <td>
            <div class="no_margin_padding">
              <span v-if="member.hasOwnProperty('job')">{{member.job}}</span>
            </div>
          </td>
          <!-- 启用状态 -->
          <td>
            <div class="no_margin_padding">
              <span v-if="member.hasOwnProperty('status') && member.status === 0">未启用</span>
              <span v-else>已启用</span>
            </div>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row" style="margin-top: 20px;">
    <div class="col"></div>
    <div class="col">
      <input class="btn btn-danger" type="button" value="删除" @click="deleteCheckedMembers">
    </div>
    <div class="col"></div>
  </div>

</div>
