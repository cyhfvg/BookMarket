<!-- 注册模态框 -->
<div class="modal fade" id="registerModal">
    <div class="modal-dialog">
        <form>
            <div class="modal-content">
                <!-- 模态框头部 -->
                <div class="modal-header">
                    <h4 class="modal-title">注册</h4>
                    <div class="alert alert-dismissible" :class="[{message_hide:!state.isMsgShow}, alertBox.alertStyle]">
                        <button type="button" class="close" @click="hideAlert">&times;</button>
                        <strong>{{ alertBox.messageState }}</strong> {{ alertBox.messageInfo }}
                    </div>
                </div>
                <!-- 模态框主体 -->
                <div class="modal-body">
                        <div class="form-group">
                            <label for="username">用户名:</label>
                            <input type="text" name="username" id="registerUsername" class="form-control" placeholder="用户名" aria-describedby="username_helpId" required>
                            <small id="username_helpId" class="text-muted">用户名登录，用户名一但确定，不可更改</small>
                        </div>
                        <div class="form-group">
                            <label for="password">密码:</label>
                            <input type="password" name="password" id="registerPassword" class="form-control" placeholder="密码" aria-describedby="password_helpId">
                            <small id="password_helpId" class="text-muted">用户登录密码</small>
                        </div>
                        <div class="form-group">
                            <label for="password1">再次输入密码:</label>
                            <input type="password" name="password1" id="registerPassword1" class="form-control" placeholder="密码" aria-describedby="password_helpId">
                            <small id="password_helpId" class="text-muted">用户登录密码</small>
                        </div>
                </div>
                <!-- 模态框底部 -->
                <div class="modal-footer">
                    <button type="button" id="register_close_btn" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                    <button type="reset" id="register_reset_btn" class="btn btn-primary">重置</button>
                    <button type="button" class="btn btn-primary" @click="register()">提交</button>
                </div>
            </div>
        </form>
    </div>
</div>
