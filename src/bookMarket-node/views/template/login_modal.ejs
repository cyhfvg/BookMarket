<!-- 登录模态框 -->
<div class="modal fade" id="loginModal">
    <div class="modal-dialog">
        <form action="member/login" method="POST">
            <div class="modal-content">
                <!-- 模态框头部 -->
                <div class="modal-header">
                    <h4 class="modal-title">登录/注册</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- 模态框主体 -->
                <div class="modal-body">
                        <div class="form-group">
                            <label for="username">用户名:</label>
                            <input type="text" id="username" class="form-control" placeholder="用户名" aria-describedby="username_helpId">
                            <small id="username_helpId" class="text-muted">用户名登录，用户名一但确定，不可更改</small>
                        </div>
                        <div class="form-group">
                            <label for="password">密码:</label>
                            <input type="password" name="password" id="password" class="form-control" placeholder="密码" aria-describedby="password_helpId">
                            <small id="password_helpId" class="text-muted">用户登录密码</small>
                        </div>
                </div>
                <!-- 模态框底部 -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                    <button type="reset" class="btn btn-primary">重置</button>
                    <button type="submit" class="btn btn-primary">提交</button>
                </div>
            </div>
        </form>
    </div>
</div>
